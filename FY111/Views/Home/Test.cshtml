        const xhttp = new XMLHttpRequest();
        xhttp.onload = function() {
            $('#receiver').append(this.responseText);
        }
        xhttp.open("POST", "https://localhost:44380/api/Member/register");
        xhttp.setRequestHeader("Content-Type", "application/json;charset=UTF-8");
        xhttp.send(
            JSON.stringify(
                {
                    "account": $('#account').val(),
                    "password": $('#psw').val(),
                    "name": $('#name').val(),
                    "avater": $('#avater').val()
                }
            )
        );
        return false;
    }
